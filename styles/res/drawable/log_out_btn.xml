<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#c5312b" />

            <gradient android:angle="-90" android:endColor="#8c101f" android:startColor="#8c101f" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#c5312b" />

            <solid android:color="#8c101f" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#c53e2b" />

            <gradient android:angle="-90" android:endColor="#a41b2b" android:startColor="#a41b2b" />
        </shape></item>

</selector>