<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.configurationactivity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/live_mesh"
        android:label="@string/sync_config"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.configurationactivity.SyncConfigActivity"
            android:icon="@drawable/live_mesh"
            android:label="@string/sync_config" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.configurationactivity.Preferences"
            android:label="@string/setting"
            android:icon="@drawable/live_mesh" >
            <intent-filter>
                <action android:name="com.example.configurationactivity" />
                
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>