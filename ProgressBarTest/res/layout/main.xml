<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sync_start_progress_selector"
        android:text="@string/hello_world" />

    <ProgressBar
        android:id="@+id/syncing_start"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:indeterminateDrawable="@drawable/syncing_start" />

    <ProgressBar
        android:id="@+id/syncing"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:indeterminateDrawable="@drawable/syncing" />
    
    <ProgressBar
        android:id="@+id/syncing_pause"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:indeterminateDrawable="@drawable/syncing_pause"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/syncing_end"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:indeterminateDrawable="@drawable/sync_end"
        android:visibility="gone" />

</RelativeLayout>